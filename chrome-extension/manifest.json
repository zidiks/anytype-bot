{
  "manifest_version": 3,
  "name": "Anytype Meet Recorder",
  "version": "1.1.0",
  "description": "Record Google Meet conversations and save summaries to Anytype",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "http://89.40.5.115:31012/*",
    "https://api.deepseek.com/*",
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}

